################ activity_welcome.xml#################
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#6FA56F">

    <!-- 상단 화살표 아이콘 (뒤로가기) -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_arrow"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_gravity="start"
        android:layout_margin="16dp"/>

    <!-- 환영 메시지 -->
    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI 훈련 코칭에\n오신 것을 환영합니다!"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <!-- 시작하기 버튼 -->
    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시작하기"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_marginTop="32dp"/>
</LinearLayout>

################WelcomeActivity.java################
package com.example.yourapp;

import android.content.Intent;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.ImageButton;

import androidx.appcompat.app.AppCompatActivity;

public class WelcomeActivity extends AppCompatActivity {

    private Button startButton;
    private ImageButton backButton;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_welcome); // activity_welcome.xml과 연결

        // 시작하기 버튼
        startButton = findViewById(R.id.start_button);
        startButton.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                // 버튼 클릭 시 다른 Activity로 이동하는 예시 코드
                Intent intent = new Intent(WelcomeActivity.this, NextActivity.class);
                startActivity(intent);
            }
        });

        // 뒤로가기 버튼
        backButton = findViewById(R.id.back_button);
        backButton.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                // 현재 Activity 종료 (뒤로가기)
                finish();
            }
        });
    }
}



